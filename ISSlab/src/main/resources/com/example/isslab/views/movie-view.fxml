<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.collections.FXCollections?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.isslab.controller.MovieController"
            prefHeight="100.0" prefWidth="185.0">
    <GridPane alignment="CENTER" AnchorPane.leftAnchor="10" AnchorPane.topAnchor="10" hgap="5" vgap="5">
        <Label GridPane.columnIndex="0" GridPane.rowIndex="0">Movie title: Movie 1</Label>
        <ComboBox GridPane.columnIndex="0" GridPane.rowIndex="1" promptText="Viewing times">
            <items>
                <FXCollections fx:factory="observableArrayList">
                    <String fx:value="18:00"/>
                    <String fx:value="12:30"/>
                    <String fx:value="14:45"/>
                </FXCollections>
            </items>
        </ComboBox>
        <Button GridPane.rowIndex="2" GridPane.columnIndex="0" text="Continue"/>
        <Button GridPane.rowIndex="2" GridPane.columnIndex="1" text="Back"/>
        <Label text="Room: 1" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
    </GridPane>
</AnchorPane>
